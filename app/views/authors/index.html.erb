<h1>All Authors</h1>

<ul>
  <% @authors.each do |a| %>
    <li>
      <div id ="authorname">
      <%= link_to a.name, author_path(a) %>
    </div>
    Total Number of Books Published: <%= a.books.count %>
  </li>
  <% end %>
</ul>

<%= link_to 'Create a New Author', new_author_path, class: "btn btn-primary"%>
