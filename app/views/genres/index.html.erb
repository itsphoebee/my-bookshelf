<h1>All Genres</h1>

<ul>
  <% @genres.uniq.each do |g| %>
    <li>
      <div id ="genrename">
        <%= link_to g.name, genre_path(g) %>
      </div>
    Total Number of Books in Genre: <%= g.books.count %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a New Genre', new_genre_path, class: "btn btn-primary"%>
