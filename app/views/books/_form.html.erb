<%= form_for book do |f| %>
  <%= f.label :title %>:<br>
  <%= f.text_field :title %> <br></br>

  <%= f.label :publication_year %>:<br>
  <%= f.text_field :publication_year %> <br></br>

  <% if params[:author_id].nil? %>
    <%= f.label :author_id%>:<br>
    <%= f.collection_select :author_id, Author.all, :id, :name %><br></br>

  <% else %>
    <%= f.hidden_field :author_id, value: params[:author_id] %>

  <% end %>

  <%= f.label :genre_id %>:<br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br></br>

  <%= f.label :blurb %>:<br>
  <%= f.text_area(:blurb, cols: 40, rows: 10)%><br></br>

  <%= f.submit%>
<% end %>

<br></br>
