    Welcome, <span id="user"><%= current_user.email %></span> |
    <%= link_to "Authors", authors_path %> |
    <%= link_to "Books", books_path %> |
    <%= link_to "Genres", genres_path %> |
    <%= link_to "Lists", reading_lists_path %> |
